<html>

<body>
    <form action="/produtos" method="POST">
        <div class="erros">
            <% if(errosValidacao) { %>
                <ul>
                    <% for(i = 0; i < errosValidacao.length; i++) { %>
                        <li>
                            <%=errosValidacao[i].param %> -
                                <%= errosValidacao[i].msg %>
                        </li>
                        <% } %>
                </ul>
                <% } %>
        </div>
        <div>
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" placeholder="Coloque o título do livro" id="titulo" value=<%=produto.titulo %> >
        </div>
        <div>
            <label for="preco">Preço</label>
            <input type="text" name="preco" placeholder="150.25" id="preco" value=<%=produto.preco %>>
        </div>
        <div>
            <label for="descricao">Descrição</label>
            <textarea rows="10" cols="30" name="descricao" placeholder="Fale sobre o livro" id="descricao" value=<%=produto.descricao%>></textarea>
        </div>
        <div>
            <input type="submit" name="gravar" value="gravar">
        </div>
    </form>

</body>

</html>